import React, { useState, useEffect } from 'react';
import { Button } from './components/ui/button';
import { Input } from './components/ui/input';
import { Label } from './components/ui/label';
import { Card, CardContent, CardHeader, CardTitle } from './components/ui/card';
import { Checkbox } from './components/ui/checkbox';
import { X, Plus, ChevronDown, ChevronUp, Trash2 } from 'lucide-react';

interface Student {
  username: string;
  password: string;
  firstName?: string;
  lastName?: string;
  class?: string;
  cardSubmitted?: boolean;
  selectedInternships?: string[];
}

interface Internship {
  id: number;
  field1: string;
  field2: string;
  field3: string;
  field4: string;
  field5: string;
}

export default function App() {
  const [currentView, setCurrentView] = useState<
    'initial' | 'student-auth' | 'student-card' | 'student-select-internships' | 'admin-login' | 'admin-dashboard' | 
    'admin-classes' | 'admin-students-by-class' | 'admin-view-student-card' | 'admin-add-internships' |
    'admin-delete-classes' | 'admin-delete-students-by-class'
  >('initial');
  
  const [students, setStudents] = useState<Student[]>([]);
  const [currentStudent, setCurrentStudent] = useState<Student | null>(null);
  const [selectedClass, setSelectedClass] = useState<string>('');
  const [selectedStudentForView, setSelectedStudentForView] = useState<Student | null>(null);
  
  // Internship template that will be shown on all student cards
  const [internshipTemplate, setInternshipTemplate] = useState<string[]>([]);
  const [tempInternshipField, setTempInternshipField] = useState('');
  
  // Student's temporary internship selections
  const [tempSelectedInternships, setTempSelectedInternships] = useState<string[]>([]);
  
  const [internships, setInternships] = useState<Internship[]>([
    { id: 1, field1: '', field2: '', field3: '', field4: '', field5: '' },
    { id: 2, field1: '', field2: '', field3: '', field4: '', field5: '' },
    { id: 3, field1: '', field2: '', field3: '', field4: '', field5: '' },
    { id: 4, field1: '', field2: '', field3: '', field4: '', field5: '' },
    { id: 5, field1: '', field2: '', field3: '', field4: '', field5: '' }
  ]);

  const [showRegister, setShowRegister] = useState(false);
  const [showInternships, setShowInternships] = useState(false);
  const [username, setUsername] = useState('');
  const [password, setPassword] = useState('');
  const [adminPassword, setAdminPassword] = useState('');
  const [firstName, setFirstName] = useState('');
  const [lastName, setLastName] = useState('');
  const [studentClass, setStudentClass] = useState('');

  // Load data from localStorage on app start
  useEffect(() => {
    try {
      const savedStudents = localStorage.getItem('sms_students');
      if (savedStudents) {
        setStudents(JSON.parse(savedStudents));
      }

      const savedInternshipTemplate = localStorage.getItem('sms_internship_template');
      if (savedInternshipTemplate) {
        setInternshipTemplate(JSON.parse(savedInternshipTemplate));
      }

      const savedInternships = localStorage.getItem('sms_internships');
      if (savedInternships) {
        setInternships(JSON.parse(savedInternships));
      }
    } catch (error) {
      console.error('Error loading data from localStorage:', error);
    }
  }, []);

  // Save students to localStorage whenever students array changes
  useEffect(() => {
    try {
      localStorage.setItem('sms_students', JSON.stringify(students));
    } catch (error) {
      console.error('Error saving students to localStorage:', error);
    }
  }, [students]);

  // Save internship template to localStorage whenever it changes
  useEffect(() => {
    try {
      localStorage.setItem('sms_internship_template', JSON.stringify(internshipTemplate));
    } catch (error) {
      console.error('Error saving internship template to localStorage:', error);
    }
  }, [internshipTemplate]);

  // Save internships to localStorage whenever they change
  useEffect(() => {
    try {
      localStorage.setItem('sms_internships', JSON.stringify(internships));
    } catch (error) {
      console.error('Error saving internships to localStorage:', error);
    }
  }, [internships]);

  const handleStudentRegister = () => {
    if (username.trim() && password.length >= 8) {
      const newStudent: Student = { username, password, selectedInternships: [] };
      setStudents([...students, newStudent]);
      setCurrentStudent(newStudent);
      setCurrentView('student-card');
      setUsername('');
      setPassword('');
    } else {
      alert('Username required and password must be at least 8 characters');
    }
  };

  const handleStudentLogin = () => {
    const student = students.find(s => s.username === username && s.password === password);
    if (student) {
      setCurrentStudent(student);
      setCurrentView('student-card');
      setFirstName(student.firstName || '');
      setLastName(student.lastName || '');
      setStudentClass(student.class || '');
      setShowInternships(false);
      setUsername('');
      setPassword('');
    } else {
      alert('Invalid username or password');
    }
  };

  const handleStudentCardSubmit = () => {
    if (currentStudent && firstName.trim() && lastName.trim() && studentClass.trim()) {
      const updatedStudent = {
        ...currentStudent,
        firstName,
        lastName,
        class: studentClass,
        cardSubmitted: true
      };
      setStudents(students.map(s => 
        s.username === currentStudent.username ? updatedStudent : s
      ));
      setCurrentStudent(updatedStudent);
      alert('Student card submitted successfully!');
    } else {
      alert('Please fill in all fields');
    }
  };

  const handleSelectInternships = () => {
    if (currentStudent) {
      setTempSelectedInternships(currentStudent.selectedInternships || []);
      setCurrentView('student-select-internships');
    }
  };

  const toggleInternshipSelection = (internship: string) => {
    setTempSelectedInternships(prev => 
      prev.includes(internship) 
        ? prev.filter(i => i !== internship)
        : [...prev, internship]
    );
  };

  const saveInternshipSelections = () => {
    if (currentStudent) {
      const updatedStudent = {
        ...currentStudent,
        selectedInternships: tempSelectedInternships
      };
      setStudents(students.map(s => 
        s.username === currentStudent.username ? updatedStudent : s
      ));
      setCurrentStudent(updatedStudent);
      setCurrentView('student-card');
      alert('Internship selections saved!');
    }
  };

  const handleAdminLogin = () => {
    if (adminPassword === 'DimaIsTheGod') {
      setCurrentView('admin-dashboard');
      setAdminPassword('');
    } else {
      alert('Incorrect administrator password');
    }
  };

  const handleDeleteStudent = (studentToDelete: Student) => {
    const confirmDelete = window.confirm(
      `Are you sure you want to delete the student card for ${studentToDelete.firstName} ${studentToDelete.lastName} (${studentToDelete.username})? This action cannot be undone.`
    );
    
    if (confirmDelete) {
      setStudents(students.filter(s => s.username !== studentToDelete.username));
      alert('Student card deleted successfully!');
      
      // If we deleted the current student, clear the current student state
      if (currentStudent && currentStudent.username === studentToDelete.username) {
        setCurrentStudent(null);
      }
      
      // If we deleted the selected student for view, clear it
      if (selectedStudentForView && selectedStudentForView.username === studentToDelete.username) {
        setSelectedStudentForView(null);
      }
    }
  };

  const updateInternship = (id: number, field: string, value: string) => {
    setInternships(internships.map(internship => 
      internship.id === id ? { ...internship, [field]: value } : internship
    ));
  };

  const getSubmittedStudents = () => {
    return students
      .filter(s => s.cardSubmitted && s.lastName)
      .sort((a, b) => a.lastName!.localeCompare(b.lastName!));
  };

  const getUniqueClasses = () => {
    const classes = students
      .filter(s => s.cardSubmitted && s.class)
      .map(s => s.class!)
      .filter((value, index, self) => self.indexOf(value) === index)
      .sort((a, b) => {
        const numA = parseInt(a);
        const numB = parseInt(b);
        if (!isNaN(numA) && !isNaN(numB)) {
          return numA - numB;
        }
        return a.localeCompare(b);
      });
    return classes;
  };

  const getStudentsByClass = (className: string) => {
    return students
      .filter(s => s.cardSubmitted && s.class === className && s.lastName)
      .sort((a, b) => a.lastName!.localeCompare(b.lastName!));
  };

  const addInternshipToTemplate = () => {
    if (tempInternshipField.trim()) {
      setInternshipTemplate([...internshipTemplate, tempInternshipField.trim()]);
      setTempInternshipField('');
    }
  };

  const removeInternshipFromTemplate = (index: number) => {
    setInternshipTemplate(internshipTemplate.filter((_, i) => i !== index));
  };

  const getInternshipFieldValue = (internship: Internship, fieldNum: number) => {
    switch (fieldNum) {
      case 1: return internship.field1;
      case 2: return internship.field2;
      case 3: return internship.field3;
      case 4: return internship.field4;
      case 5: return internship.field5;
      default: return '';
    }
  };

  return (
    <div className="min-h-screen bg-purple-600 p-8">
      <div className="max-w-4xl mx-auto">
        {currentView === 'initial' && (
          <div className="flex flex-col items-center justify-center min-h-[80vh] space-y-6">
            <h1 className="text-white text-3xl mb-8">Student Management System</h1>
            <div className="space-y-4">
              <Button 
                onClick={() => setCurrentView('admin-login')}
                className="w-64 h-12 bg-white text-purple-600 hover:bg-gray-100"
              >
                Log in as Administrator
              </Button>
              <Button 
                onClick={() => setCurrentView('student-auth')}
                className="w-64 h-12 bg-white text-purple-600 hover:bg-gray-100"
              >
                Log in as Student
              </Button>
            </div>
          </div>
        )}

        {currentView === 'student-auth' && (
          <div className="flex flex-col items-center justify-center min-h-[80vh]">
            <Card className="w-96 bg-white relative">
              <Button 
                onClick={() => setCurrentView('initial')}
                variant="ghost"
                size="sm"
                className="absolute top-2 right-2 p-2 text-purple-600 hover:bg-purple-50"
              >
                <X size={16} />
              </Button>
              <CardHeader>
                <CardTitle className="text-center text-purple-600">Student Access</CardTitle>
              </CardHeader>
              <CardContent className="space-y-4">
                <div className="space-y-4">
                  <div>
                    <Label htmlFor="username">Username</Label>
                    <Input
                      id="username"
                      value={username}
                      onChange={(e) => setUsername(e.target.value)}
                      placeholder="Enter username"
                    />
                  </div>
                  <div>
                    <Label htmlFor="password">Password (min 8 characters)</Label>
                    <Input
                      id="password"
                      type="password"
                      value={password}
                      onChange={(e) => setPassword(e.target.value)}
                      placeholder="Enter password"
                    />
                  </div>
                  <div className="space-y-2">
                    {showRegister ? (
                      <Button 
                        onClick={handleStudentRegister}
                        className="w-full bg-purple-600 hover:bg-purple-700"
                      >
                        Register
                      </Button>
                    ) : (
                      <Button 
                        onClick={handleStudentLogin}
                        className="w-full bg-purple-600 hover:bg-purple-700"
                      >
                        Log In
                      </Button>
                    )}
                    <Button 
                      onClick={() => setShowRegister(!showRegister)}
                      variant="ghost"
                      className="w-full text-purple-600 hover:bg-purple-50"
                    >
                      {showRegister ? 'Already have an account? Log In' : 'Need an account? Register'}
                    </Button>
                  </div>
                </div>
              </CardContent>
            </Card>
          </div>
        )}

        {currentView === 'student-card' && (
          <div className="flex flex-col items-center justify-center min-h-[80vh]">
            <Card className="w-96 bg-white relative">
              <Button 
                onClick={() => setCurrentView('student-auth')}
                variant="ghost"
                size="sm"
                className="absolute top-2 right-2 p-2 text-purple-600 hover:bg-purple-50"
              >
                <X size={16} />
              </Button>
              <CardHeader>
                <CardTitle className="text-center text-purple-600">Student Card</CardTitle>
              </CardHeader>
              <CardContent className="space-y-4">
                <div>
                  <Label htmlFor="firstName">First Name</Label>
                  <Input
                    id="firstName"
                    value={firstName}
                    onChange={(e) => setFirstName(e.target.value)}
                    placeholder="Enter first name"
                  />
                </div>
                <div>
                  <Label htmlFor="lastName">Last Name</Label>
                  <Input
                    id="lastName"
                    value={lastName}
                    onChange={(e) => setLastName(e.target.value)}
                    placeholder="Enter last name"
                  />
                </div>
                <div>
                  <Label htmlFor="class">Class</Label>
                  <Input
                    id="class"
                    value={studentClass}
                    onChange={(e) => setStudentClass(e.target.value)}
                    placeholder="Enter class"
                  />
                </div>
                
                {internshipTemplate.length > 0 && (
                  <div className="space-y-2">
                    <div className="flex items-center justify-between">
                      <Label>Available Internships</Label>
                      <Button
                        onClick={() => setShowInternships(!showInternships)}
                        variant="ghost"
                        size="sm"
                        className="text-purple-600 hover:bg-purple-50"
                      >
                        {showInternships ? <ChevronUp size={16} /> : <ChevronDown size={16} />}
                      </Button>
                    </div>
                    
                    {showInternships && (
                      <div className="space-y-2">
                        <div className="space-y-2 max-h-32 overflow-y-auto">
                          {internshipTemplate.map((internship, index) => (
                            <div key={index} className="p-2 bg-gray-50 rounded text-sm">
                              {internship}
                            </div>
                          ))}
                        </div>
                        <Button 
                          onClick={handleSelectInternships}
                          className="w-full bg-blue-500 hover:bg-blue-600 text-white"
                        >
                          Select Internships
                        </Button>
                      </div>
                    )}
                    
                    {currentStudent?.selectedInternships && currentStudent.selectedInternships.length > 0 && (
                      <div className="space-y-2">
                        <Label>My Selected Internships</Label>
                        <div className="space-y-1">
                          {currentStudent.selectedInternships.map((internship, index) => (
                            <div key={index} className="p-2 bg-green-50 rounded text-sm border-l-4 border-green-500">
                              ✓ {internship}
                            </div>
                          ))}
                        </div>
                      </div>
                    )}
                  </div>
                )}

                <Button 
                  onClick={handleStudentCardSubmit}
                  className="w-full bg-purple-600 hover:bg-purple-700"
                >
                  Send
                </Button>
              </CardContent>
            </Card>
          </div>
        )}

        {currentView === 'student-select-internships' && (
          <div className="flex flex-col items-center justify-center min-h-[80vh]">
            <Card className="w-96 bg-white relative">
              <Button 
                onClick={() => setCurrentView('student-card')}
                variant="ghost"
                size="sm"
                className="absolute top-2 right-2 p-2 text-purple-600 hover:bg-purple-50"
              >
                <X size={16} />
              </Button>
              <CardHeader>
                <CardTitle className="text-center text-purple-600">Select Internships</CardTitle>
              </CardHeader>
              <CardContent className="space-y-4">
                <div>
                  <Label>Choose your internships:</Label>
                  <div className="space-y-3 mt-2 max-h-64 overflow-y-auto">
                    {internshipTemplate.map((internship, index) => (
                      <div key={index} className="flex items-center space-x-2">
                        <Checkbox
                          id={`internship-${index}`}
                          checked={tempSelectedInternships.includes(internship)}
                          onCheckedChange={() => toggleInternshipSelection(internship)}
                        />
                        <label 
                          htmlFor={`internship-${index}`}
                          className="text-sm cursor-pointer flex-1"
                        >
                          {internship}
                        </label>
                      </div>
                    ))}
                  </div>
                </div>
                
                <div className="space-y-2">
                  <Button 
                    onClick={saveInternshipSelections}
                    className="w-full bg-purple-600 hover:bg-purple-700"
                  >
                    Save Selections ({tempSelectedInternships.length})
                  </Button>
                  <Button 
                    onClick={() => setCurrentView('student-card')}
                    variant="outline"
                    className="w-full border-purple-600 text-purple-600 hover:bg-purple-50"
                  >
                    Cancel
                  </Button>
                </div>
              </CardContent>
            </Card>
          </div>
        )}

        {currentView === 'admin-login' && (
          <div className="flex flex-col items-center justify-center min-h-[80vh]">
            <Card className="w-96 bg-white relative">
              <Button 
                onClick={() => setCurrentView('initial')}
                variant="ghost"
                size="sm"
                className="absolute top-2 right-2 p-2 text-purple-600 hover:bg-purple-50"
              >
                <X size={16} />
              </Button>
              <CardHeader>
                <CardTitle className="text-center text-purple-600">Administrator Login</CardTitle>
              </CardHeader>
              <CardContent className="space-y-4">
                <div>
                  <Label htmlFor="adminPassword">Administrator Password</Label>
                  <Input
                    id="adminPassword"
                    type="password"
                    value={adminPassword}
                    onChange={(e) => setAdminPassword(e.target.value)}
                    placeholder="Enter administrator password"
                  />
                </div>
                <Button 
                  onClick={handleAdminLogin}
                  className="w-full bg-purple-600 hover:bg-purple-700"
                >
                  Log In
                </Button>
              </CardContent>
            </Card>
          </div>
        )}

        {currentView === 'admin-dashboard' && (
          <div className="space-y-8">
            <div className="flex items-center justify-between">
              <h1 className="text-white text-3xl">Administrator Dashboard</h1>
              <Button 
                onClick={() => setCurrentView('initial')}
                variant="ghost"
                size="sm"
                className="p-2 text-white hover:bg-purple-700"
              >
                <X size={20} />
              </Button>
            </div>
            
            <div className="flex flex-col items-center space-y-6">
              <Button 
                onClick={() => setCurrentView('admin-classes')}
                className="w-64 h-12 bg-green-500 hover:bg-green-600 text-white"
              >
                View Students
              </Button>
              <Button 
                onClick={() => setCurrentView('admin-delete-classes')}
                className="w-64 h-12 bg-red-500 hover:bg-red-600 text-white"
              >
                Delete Students
              </Button>
              <Button 
                onClick={() => setCurrentView('admin-add-internships')}
                className="w-64 h-12 bg-blue-500 hover:bg-blue-600 text-white"
              >
                Add Internships
              </Button>
            </div>
          </div>
        )}

        {currentView === 'admin-classes' && (
          <div className="space-y-8">
            <div className="flex items-center justify-between">
              <h1 className="text-white text-3xl">Classes</h1>
              <Button 
                onClick={() => setCurrentView('admin-dashboard')}
                variant="ghost"
                size="sm"
                className="p-2 text-white hover:bg-purple-700"
              >
                <X size={20} />
              </Button>
            </div>
            
            <div className="grid gap-4">
              {getUniqueClasses().length === 0 ? (
                <p className="text-white opacity-75 text-center">No classes found</p>
              ) : (
                getUniqueClasses().map((className) => (
                  <Card key={className} className="bg-green-500 text-white cursor-pointer hover:bg-green-600">
                    <CardContent 
                      className="p-4"
                      onClick={() => {
                        setSelectedClass(className);
                        setCurrentView('admin-students-by-class');
                      }}
                    >
                      <h3>Class {className}</h3>
                      <p>{getStudentsByClass(className).length} students</p>
                    </CardContent>
                  </Card>
                ))
              )}
            </div>
          </div>
        )}

        {currentView === 'admin-delete-classes' && (
          <div className="space-y-8">
            <div className="flex items-center justify-between">
              <h1 className="text-white text-3xl">Delete Students - Select Class</h1>
              <Button 
                onClick={() => setCurrentView('admin-dashboard')}
                variant="ghost"
                size="sm"
                className="p-2 text-white hover:bg-purple-700"
              >
                <X size={20} />
              </Button>
            </div>
            
            <div className="grid gap-4">
              {getUniqueClasses().length === 0 ? (
                <p className="text-white opacity-75 text-center">No classes found</p>
              ) : (
                getUniqueClasses().map((className) => (
                  <Card key={className} className="bg-red-500 text-white cursor-pointer hover:bg-red-600">
                    <CardContent 
                      className="p-4"
                      onClick={() => {
                        setSelectedClass(className);
                        setCurrentView('admin-delete-students-by-class');
                      }}
                    >
                      <h3>Class {className}</h3>
                      <p>{getStudentsByClass(className).length} students</p>
                    </CardContent>
                  </Card>
                ))
              )}
            </div>
          </div>
        )}

        {currentView === 'admin-students-by-class' && (
          <div className="space-y-8">
            <div className="flex items-center justify-between">
              <h1 className="text-white text-3xl">Class {selectedClass} - Students</h1>
              <Button 
                onClick={() => setCurrentView('admin-classes')}
                variant="ghost"
                size="sm"
                className="p-2 text-white hover:bg-purple-700"
              >
                <X size={20} />
              </Button>
            </div>
            
            <div className="grid gap-4">
              {getStudentsByClass(selectedClass).map((student) => (
                <Card key={student.username} className="bg-green-500 text-white cursor-pointer hover:bg-green-600">
                  <CardContent 
                    className="p-4"
                    onClick={() => {
                      setSelectedStudentForView(student);
                      setCurrentView('admin-view-student-card');
                    }}
                  >
                    <h3>{student.lastName}, {student.firstName}</h3>
                    <p>Username: {student.username}</p>
                    {student.selectedInternships && student.selectedInternships.length > 0 && (
                      <p>Selected Internships: {student.selectedInternships.length}</p>
                    )}
                  </CardContent>
                </Card>
              ))}
            </div>
          </div>
        )}

        {currentView === 'admin-delete-students-by-class' && (
          <div className="space-y-8">
            <div className="flex items-center justify-between">
              <h1 className="text-white text-3xl">Delete Students - Class {selectedClass}</h1>
              <Button 
                onClick={() => setCurrentView('admin-delete-classes')}
                variant="ghost"
                size="sm"
                className="p-2 text-white hover:bg-purple-700"
              >
                <X size={20} />
              </Button>
            </div>
            
            <div className="grid gap-4">
              {getStudentsByClass(selectedClass).map((student) => (
                <Card key={student.username} className="bg-red-500 text-white">
                  <CardContent className="p-4 flex items-center justify-between">
                    <div>
                      <h3>{student.lastName}, {student.firstName}</h3>
                      <p>Username: {student.username}</p>
                      {student.selectedInternships && student.selectedInternships.length > 0 && (
                        <p>Selected Internships: {student.selectedInternships.length}</p>
                      )}
                    </div>
                    <Button 
                      onClick={() => handleDeleteStudent(student)}
                      variant="ghost"
                      size="sm"
                      className="p-2 text-white hover:bg-red-600 ml-4"
                    >
                      <Trash2 size={20} />
                    </Button>
                  </CardContent>
                </Card>
              ))}
            </div>
          </div>
        )}

        {currentView === 'admin-view-student-card' && selectedStudentForView && (
          <div className="flex flex-col items-center justify-center min-h-[80vh]">
            <Card className="w-96 bg-white relative">
              <Button 
                onClick={() => setCurrentView('admin-students-by-class')}
                variant="ghost"
                size="sm"
                className="absolute top-2 right-2 p-2 text-purple-600 hover:bg-purple-50"
              >
                <X size={16} />
              </Button>
              <CardHeader>
                <CardTitle className="text-center text-purple-600">Student Card</CardTitle>
              </CardHeader>
              <CardContent className="space-y-4">
                <div>
                  <Label>First Name</Label>
                  <div className="p-2 bg-gray-50 rounded">{selectedStudentForView.firstName}</div>
                </div>
                <div>
                  <Label>Last Name</Label>
                  <div className="p-2 bg-gray-50 rounded">{selectedStudentForView.lastName}</div>
                </div>
                <div>
                  <Label>Class</Label>
                  <div className="p-2 bg-gray-50 rounded">{selectedStudentForView.class}</div>
                </div>
                
                {internshipTemplate.length > 0 && (
                  <div className="space-y-2">
                    <Label>Available Internships</Label>
                    <div className="space-y-2">
                      {internshipTemplate.map((internship, index) => (
                        <div key={index} className="p-2 bg-gray-50 rounded text-sm">
                          {internship}
                        </div>
                      ))}
                    </div>
                  </div>
                )}

                {selectedStudentForView.selectedInternships && selectedStudentForView.selectedInternships.length > 0 && (
                  <div className="space-y-2">
                    <Label>Student's Selected Internships</Label>
                    <div className="space-y-1">
                      {selectedStudentForView.selectedInternships.map((internship, index) => (
                        <div key={index} className="p-2 bg-green-50 rounded text-sm border-l-4 border-green-500">
                          ✓ {internship}
                        </div>
                      ))}
                    </div>
                  </div>
                )}
              </CardContent>
            </Card>
          </div>
        )}

        {currentView === 'admin-add-internships' && (
          <div className="space-y-8">
            <div className="flex items-center justify-between">
              <h1 className="text-white text-3xl">Manage Internship Template</h1>
              <Button 
                onClick={() => setCurrentView('admin-dashboard')}
                variant="ghost"
                size="sm"
                className="p-2 text-white hover:bg-purple-700"
              >
                <X size={20} />
              </Button>
            </div>
            
            <div className="flex flex-col items-center">
              <Card className="w-96 bg-white">
                <CardHeader>
                  <CardTitle className="text-center text-purple-600">Student Card Template</CardTitle>
                </CardHeader>
                <CardContent className="space-y-4">
                  <div>
                    <Label>First Name</Label>
                    <div className="p-2 bg-gray-100 rounded text-gray-500">[Student First Name]</div>
                  </div>
                  <div>
                    <Label>Last Name</Label>
                    <div className="p-2 bg-gray-100 rounded text-gray-500">[Student Last Name]</div>
                  </div>
                  <div>
                    <Label>Class</Label>
                    <div className="p-2 bg-gray-100 rounded text-gray-500">[Student Class]</div>
                  </div>
                  
                  <div className="space-y-2">
                    <Label>Available Internships</Label>
                    {internshipTemplate.length === 0 ? (
                      <p className="text-gray-500 text-sm">No internships added yet</p>
                    ) : (
                      <div className="space-y-2">
                        {internshipTemplate.map((internship, index) => (
                          <div key={index} className="flex items-center justify-between p-2 bg-blue-50 rounded">
                            <span className="text-sm">{internship}</span>
                            <Button 
                              onClick={() => removeInternshipFromTemplate(index)}
                              variant="ghost"
                              size="sm"
                              className="p-1 text-red-500 hover:bg-red-50"
                            >
                              <X size={14} />
                            </Button>
                          </div>
                        ))}
                      </div>
                    )}
                    
                    <div className="flex gap-2">
                      <Input
                        value={tempInternshipField}
                        onChange={(e) => setTempInternshipField(e.target.value)}
                        placeholder="Enter internship name"
                        className="flex-1"
                      />
                      <Button 
                        onClick={addInternshipToTemplate}
                        size="sm"
                        className="bg-blue-500 hover:bg-blue-600"
                      >
                        <Plus size={16} />
                      </Button>
                    </div>
                  </div>
                  
                  <Button 
                    onClick={() => {
                      alert('Internship template saved! All student cards will now show these internships.');
                      setCurrentView('admin-dashboard');
                    }}
                    className="w-full bg-purple-600 hover:bg-purple-700"
                  >
                    Save Template
                  </Button>
                </CardContent>
              </Card>
            </div>
          </div>
        )}
      </div>
    </div>
  );
}
